{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateBaseUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/Microsoft/containers-rest-cosmos-appservice-java/tree/master/infrastructure/"
    },
    "vaultResourceGroup": {
      "type": "string"
    },
    "vaultName": {
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "nestedTemplate",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateBaseUri'), 'azuredeploy_nested.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vaultResourceGroup": {
            "value": "[parameters('vaultResourceGroup')]"
          },
          "vaultName": {
            "value": "[parameters('vaultName')]"
          },
          "database_connection_string": {
            "reference": {
              "keyVault": {
                "id": "[resourceId(subscription().subscriptionId,  parameters('vaultResourceGroup'), 'Microsoft.KeyVault/vaults', parameters('vaultName'))]"
              },
              "secretName": "databaseConnectionString"
            }
          }
        }
      }
    }
  ],
  "outputs": {}
}
